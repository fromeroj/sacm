// Helper function for zone text
function getZonaText(zona) {
    const zonas = {
        'general': 'Rep√∫blica General',
        'cdmx': 'Ciudad de M√©xico (D.F.)',
        'guadalajara': 'Guadalajara, Jalisco',
        'monterrey': 'Monterrey, Nuevo Le√≥n'
    };
    return zonas[zona] || zona;
}

// Show contract review
function showContractReview() {
    alert('üîÑ Funcionalidad en desarrollo\n\nEsta funci√≥n mostrar√°:\n‚Ä¢ Contrato detallado en PDF\n‚Ä¢ T√©rminos y condiciones\n‚Ä¢ Informaci√≥n de la licencia\n‚Ä¢ Datos del establecimiento');
}

// Proceed to payment
function proceedToPayment() {
    alert('üí≥ Funcionalidad en desarrollo\n\nEsta funci√≥n incluir√°:\n‚Ä¢ Pasarela de pago segura\n‚Ä¢ M√©todos de pago (tarjeta, transferencia)\n‚Ä¢ Confirmaci√≥n de pago\n‚Ä¢ Generaci√≥n de licencia oficial\n\nPor ahora, contacte directamente a SACM:\nwww.sacm.org.mx');
}

// Reset form for new calculation
function resetForm() {
    form.reset();
    updateConditionalFields();
    showSection('form');
}

// Show specific section
function showSection(section) {
    // Hide all sections
    formSection.style.display = 'none';
    loadingSection.style.display = 'none';
    resultsSection.style.display = 'none';
    
    // Show requested section
    switch (section) {
        case 'form':
            formSection.style.display = 'block';
            break;
        case 'loading':
            loadingSection.style.display = 'block';
            break;
        case 'results':
            resultsSection.style.display = 'block';
            break;
    }
    
    // Scroll to top
    window.scrollTo({ top: 0, behavior: 'smooth' });
}

